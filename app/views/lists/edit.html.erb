<h1> Edit List </h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @list do |l| %>
     <div class="form-group">
       <%= l.label :title %>
       <%= l.text_field :title, class: 'form-control', placeholder: "Enter list title" %>
    </div>  
    <div class="form-group">
      <%= l.submit "Save", class: 'btn btn-success' %>
    </div> 
    <% end %>
  </div> 
</div>  
