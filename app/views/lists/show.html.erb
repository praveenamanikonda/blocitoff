<% if @list.nil? %>
  <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% else %>
  <ul class="unstyled">
    <%= render partial: '/items/item', locals: {list: @list, items: @items} %>
  </ul>
<% end %> 
  
  <%= render partial: '/items/form', locals: {list: @list} %>
  <%= link_to "Edit", edit_list_path(@list), class: 'btn btn-success' %>

  <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
